        "${pkgdir}/etc/lightdm/lightdm.conf.d/10-osafi.conf"
    install -Dm 0755 ../osafi-desktop/lightdm/locker.sh \
        "${pkgdir}/etc/osafi/wminitrc.d/10-locker.sh"

